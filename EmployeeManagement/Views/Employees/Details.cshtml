            @Html.DisplayFor(model => model.ModifiedByID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
    </dl>
    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-secondary">Edit</a> |
        <a asp-action="Index" class="btn-secondary">Back to List</a>
    </div>
</div>
